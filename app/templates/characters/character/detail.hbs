{{#paper-card as |card|}}
  {{detail-header text=model.name}}
  {{#card.title as |title|}}
    {{detail-lines lines=lines}}
  {{/card.title}}
  {{paper-divider inset=true}}

  {{#if model.films}}
      {{bind/films-bloc model=model.films title="Appears in"}}
  {{/if}}
  {{#if model.locations}}
      {{bind/locations-bloc model=model.locations title="Lives in"}}
  {{/if}}
  {{#if model.vehicles}}
      {{bind/vehicles-bloc model=model.vehicles title="Drives"}}
  {{/if}}

{{/paper-card}}




