{{#paper-card as |card|}}
  {{detail-header text=model.name}}
  {{#card.title as |title|}}
    {{detail-lines lines=lines}}
  {{/card.title}}
  {{paper-divider inset=true}}

  {{#if model.films}}
      {{bind/films-bloc model=model.films title="Appears in"}}
  {{/if}}
  {{#if model.residents}}
      {{bind/characters-bloc model=model.residents title="Residents"}}
  {{/if}}

{{/paper-card}}
