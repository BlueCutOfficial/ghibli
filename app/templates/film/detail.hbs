{{#paper-card as |card|}}
  {{detail-header text=model.title}}
  {{#if model.isSeen}}
    {{#paper-button raised=true fab=true class="markSeenBtn" onClick=(action "markSeen")}}Seen!{{/paper-button}}
  {{else}}
    {{#paper-button raised=true class="markSeenBtn unseen" onClick=(action "markSeen")}}Mark as seen{{/paper-button}}
  {{/if}}
  {{#card.title as |title|}}
    {{bind/poster-item id=model.id title=model.title classImg="poster-middle"}}
    {{detail-lines description=model.description lines=lines}}
  {{/card.title}}
  {{paper-divider inset=true}}

  {{#if model.people}}
    {{bind/characters-bloc model=model.people title="Characters"}}
  {{/if}}
  {{#if model.locations}}
      {{bind/locations-bloc model=model.locations title="Locations"}}
  {{/if}}
  {{#if model.vehicles}}
      {{bind/vehicles-bloc model=model.vehicles title="Vehicles"}}
  {{/if}}

{{/paper-card}}
{{#link-to "films" tagName="button" class="back md-button md-raised"}}Back to films{{/link-to}}