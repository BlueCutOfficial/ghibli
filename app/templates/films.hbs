{{#paper-select class="inline" disabled=disableSelect label="Sort by" options=selectableOptions selected=selectedOption onchange=(action "setSorting") as |option|}}
  {{option.name}}
{{/paper-select}}
{{#if unseenFilm}}
  {{#link-to "film.detail" unseenFilm.id class="inline md-button md-raised"}}
    <p>Pick up a movie to watch</p>
  {{/link-to}}
{{/if}}
<div class="align-center">
  {{#each sortedFilms as |film|}}
    {{#link-to "film.detail" film.id class="film-button md-button"}}
      <div class="film-link">
        <div class="film-button-info">
          <p class="film-button-title">{{film.title}}</p>
          <p class="film-button-desc">"{{film.shortDescription}}"</p>
        </div>
        {{#if film.isSeen}}
          {{#paper-button raised=true fab=true class="markSeenBtn inline"}}Seen!{{/paper-button}}
        {{else}}
          {{#paper-button raised=true fab=true class="markSeenBtn inline unseen"}}Seen!{{/paper-button}}
        {{/if}}
      </div>
    {{/link-to}}
  {{/each}}
</div>

